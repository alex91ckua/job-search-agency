<div class="hero">
  <div class="container">
    <div class="row">
      <div class="hero__title  col-12">
        <h1><%= title.html_safe %></h1>
        <% if defined? subtitle %>
          <div class="round"></div>
          <h3><%= subtitle %></h3>
        <% end %>
      </div>
    </div>
  </div>
  <div class="hero__orb  hero__orb--1">
    <% if defined? orb_1 %>
      <img src="<%= asset_path(orb_1) %>" alt="<%= COMPANY_NAME %>">
    <% else %>
      <img src="<%= asset_path('orb-10.png') %>" alt="<%= COMPANY_NAME %>">
    <% end %>
  </div>
  <div class="hero__orb  hero__orb--2">
    <% if defined? orb_2 %>
      <img src="<%= asset_path(orb_2) %>" alt="<%= COMPANY_NAME %>">
    <% else %>
      <img src="<%= asset_path('orb-2.png') %>" alt="<%= COMPANY_NAME %>">
    <% end %>
  </div>
  <div class="hero__orb  hero__orb--3">
    <% if defined? orb_3 %>
      <img src="<%= asset_path(orb_3) %>" alt="<%= COMPANY_NAME %>">
    <% else %>
      <img src="<%= asset_path('orb-3.png') %>" alt="<%= COMPANY_NAME %>">
    <% end %>
  </div>
</div>
