<% content_for :body_class, 'blog-page' %>

<div class="hero">
  <div class="container">
    <div class="row">
      <div class="hero__title  col-12">
        <h1><%= @article.title %></h1>
        <div class="round"></div>
        <h3><%= @article.subtitle %></h3>
      </div>
    </div>
  </div>
  <div class="hero__orb  hero__orb--1">
    <img src="img/orb-10.png" alt="">
  </div>
</div>
